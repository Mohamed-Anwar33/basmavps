{
  "name": "basma-design-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for Basma Design website",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "dev": "NODE_ENV=development nodemon src/server.js",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "seed": "node scripts/seedData.js",
    "docker:build": "docker build -t basma-backend .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f backend",
    "setup-admin": "node scripts/setupAdmin.js",
    "cleanup-orders": "node scripts/cleanup-draft-orders.js",
    "fix-order-index": "node scripts/fix-order-index.js",
    "build": "echo 'No build step required'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare-production": "node scripts/prepare-production.js",
    "backup": "node scripts/backup-before-cleanup.js",
    "clean-console": "node scripts/remove-console-logs.js",
    "clean-console:dry": "node scripts/remove-console-logs.js --dry-run",
    "restore": "node scripts/restore-backup.js",
    "production:check": "node scripts/prepare-production.js",
    "security:check": "node scripts/security-check.js",
    "cleanup": "node scripts/manual-cleanup.js full",
    "cleanup:orders": "node scripts/manual-cleanup.js orders",
    "cleanup:payments": "node scripts/manual-cleanup.js payments",
    "cleanup:preview": "node scripts/manual-cleanup.js preview",
    "test:delete-orders": "node scripts/test-delete-orders.js test",
    "test:create-orders": "node scripts/test-delete-orders.js create",
    "test:cleanup-orders": "node scripts/test-delete-orders.js cleanup",
    "check-admins": "node scripts/check-admin-roles.js check",
    "create-test-admin": "node scripts/check-admin-roles.js create"
  },
  "keywords": [
    "express",
    "mongodb",
    "jwt",
    "cms",
    "api"
  ],
  "author": "Basma Design",
  "license": "MIT",
  "dependencies": {
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@paypal/paypal-server-sdk": "^1.1.0",
    "aws-sdk": "^2.1491.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "isomorphic-dompurify": "^2.26.0",
    "joi": "^17.11.0",
    "jsdom": "^23.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.6.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.7",
    "redis": "^5.8.2",
    "sharp": "^0.34.4",
    "slugify": "^1.6.6",
    "socket.io": "^4.8.1",
    "stripe": "^14.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.15.15",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.3",
    "babel-jest": "^29.7.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
